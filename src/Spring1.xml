<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 20.//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

	<beans>
	 <bean id="triangle" class = "com.spring.test.Triangle">
		   <property name="type" value = "Equilateral">
		   </property>
	</bean>	

	
	 <bean id="shape" class = "getter.setter.dependency.injection.Shape">
		  <property name="pointA" ref = "point0" />
		  <property name="pointB" ref = "point1" />
		  <property name="pointC" ref = "point2" />
	</bean>	
	

	<bean id="point0" class = "getter.setter.dependency.injection.Point">
		 	<property name= "X" value = "0" />
			<property name= "Y" value = "0" />   
	</bean>
	
	<bean id="point1" class = "getter.setter.dependency.injection.Point">
		 	<property name= "X" value = "0" />
			<property name= "Y" value = "20" />   
	</bean>

	<bean id="point2" class = "getter.setter.dependency.injection.Point">
		 	<property name= "X" value = "15" />
			<property name= "Y" value = "20" />   
	</bean>	
		
		


	</beans>
	
			
	
		
	
